{
  "name": "kidsloop-attendance-service",
  "version": "1.2.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "db:setup": "ts-node tests/utils/setup.ts",
    "test:unit": "npm run db:setup && jest --runInBand",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:compile && npm run build:copy-assets",
    "build:compile": "tsc -p tsconfig.json --outDir ./dist",
    "build:copy-assets": "cp README.md ./dist && cp package.json ./dist",
    "release": "standard-version --no-verify",
    "watch": "tsc -w",
    "start": "npm run migrate && ts-node dist/index.js",
    "dev": "npm run migrate && ts-node-dev src/index.ts",
    "migrate": "ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/typeormConfig.ts migration:run",
    "generate:migration": "ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create -d src/migrations -n"
  },
  "_moduleAliases": {
    "@src": "./src",
    "@tests": "./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/calmisland/kidsloop-attendance-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/calmisland/kidsloop-attendance-service#readme",
  "dependencies": {
    "@newrelic/apollo-server-plugin": "^1.0.2",
    "apollo-server-express": "^3.3.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.6.1",
    "graphql-request": "^3.5.0",
    "graphql-tools": "^8.2.0",
    "module-alias": "^2.2.2",
    "newrelic": "^8.5.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.38",
    "webpack-dev-server": "^4.3.1",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/newrelic": "^7.0.2",
    "@types/node": "^16.10.3",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "nodemon": "^2.0.13",
    "rollup": "^2.58.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.3.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0"
  }
}
