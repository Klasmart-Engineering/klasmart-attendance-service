{
  "name": "kidsloop-attendance-service",
  "version": "1.6.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "db:setup": "ts-node tests/utils/setup.ts",
    "test": "npm run db:setup && npm run test:unit && npm run test:integration",
    "test:unit": "jest  --runInBand --coverage --forceExit --testPathPattern=tests/unit/",
    "test:integration": "npm run db:setup && jest --runInBand --coverage --forceExit --testPathPattern=tests/integration/",
    "lint": "eslint --fix --ext .ts src/**",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:compile && npm run build:copy-assets",
    "build:compile": "tsc -p tsconfig.json --outDir ./dist",
    "build:copy-assets": "cp README.md ./dist && cp package.json ./dist",
    "release": "standard-version --no-verify",
    "watch": "tsc -w",
    "start": "node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "_moduleAliases": {
    "@src": "./src",
    "@tests": "./tests"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/calmisland/kidsloop-attendance-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/calmisland/kidsloop-attendance-service#readme",
  "dependencies": {
    "apollo-server-express": "^3.3.0",
    "aws-sdk": "^2.1126.0",
    "axios": "^0.27.2",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^15.8.0",
    "graphql-request": "^4.2.0",
    "graphql-tools": "^8.2.0",
    "helmet": "^5.1.0",
    "ioredis": "^4.28.3",
    "jsonwebtoken": "^8.5.1",
    "newrelic": "^8.5.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.5",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@newrelic/apollo-server-plugin": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/newrelic": "^7.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "eslint": "^8.13.0",
    "jest": "^27.2.5",
    "standard-version": "^9.3.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.4.3"
  }
}